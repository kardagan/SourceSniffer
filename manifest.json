{
    "name" :"Code Sniffer",
    "manifest_version":2,
    "version" :"1.0",
    "description" : "Recherche de texte/code dans la source HTML pendant que vous surfez.",
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "permissions": ["tabs"],
    "icons": {
        "16": "Img/file_search_16x16.png",
        "48": "Img/file_search_48x48.png",
        "128": "Img/file_search_128x128.png"
    },
    "background": {
        "scripts": ["Background/eventPage.js"],
        "persistent": true
    },
    "browser_action" : {
            "default_popup" :"Popup/popup.html",
            "default_icon":"Img/file_search_128x128.png"
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["ContentScript/script.js"]
        }
    ],
    "options_page" : "Options/options.html",
    "default_locale" : "fr"
}